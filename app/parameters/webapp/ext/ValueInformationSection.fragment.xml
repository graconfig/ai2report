<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
>
	<VBox>
		<f:Form editable="true">
			<f:layout>
				<f:ColumnLayout
					columnsXL="1"
					columnsL="1"
					labelCellsLarge="12"
				/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="{i18n>value}">
							<f:fields>
								<TextArea rows="10" 
                          value="{value}"
                          editable="{= ${ui>/editMode} === 'Editable'}">
                    
                </TextArea>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>